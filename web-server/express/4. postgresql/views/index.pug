extends layout

block content
    h1= title

    h2 Podaj imię użytkownika do stworzenia
    form(action="/users/create", method="post")
        input(type="text", name="username")
        input(type="submit")

    h2 Lista użytkowników

    ul
    each user in users
        li
            = user.username
            | &nbsp;
            | (
            a(href="/users/" + user.id + "/destroy") Usuń
            | )
            ul
                li
                    | Stwórz nowe zadanie:
                    form(action="/users/" + user.id + "/tasks/create", method="post", style="display: inline")
                        input(type="text", name="title")
                        input(type="submit")
                each task in user.Tasks
                    li
                        = task.title
                        | &nbsp;
                        | (
                        a(href="/users/" + user.id + "/tasks/" + task.id + "/destroy") Usuń
                        | )
